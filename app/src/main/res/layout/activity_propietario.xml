<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dam32_corral.coches.Propietario">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PROPIETARIOS"
        android:id="@+id/tv_propietarios"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre: "
        android:id="@+id/tv_nombre"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/tv_propietarios"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_nombre"
        android:layout_below="@+id/tv_nombre"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DNI:"
        android:id="@+id/tv_dni"
        android:layout_below="@+id/et_nombre"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_dni"
        android:layout_below="@+id/tv_dni"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/et_nombre" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp_dni"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:layout_below="@+id/tv_dni"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/tv_propietarios" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Edad:"
        android:id="@+id/tv_edad"
        android:layout_below="@+id/et_dni"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_edad"
        android:layout_below="@+id/tv_edad"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/et_dni" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ACEPTAR"
        android:id="@+id/bt_aceptar"
        android:layout_above="@+id/bt_volver"
        android:layout_alignParentStart="true"
        android:onClick="aceptar" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="VOLVER"
        android:id="@+id/bt_volver"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="volver" />

</RelativeLayout>
