<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dam32_corral.coches.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bienvenidos"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ALTA"
        android:id="@+id/button"
        android:layout_above="@+id/button2"
        android:layout_alignParentEnd="true"
        android:onClick="alta" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="BAJA"
        android:id="@+id/button2"
        android:layout_above="@+id/button3"
        android:layout_alignParentStart="true"
        android:onClick="baja" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CONSULTA"
        android:id="@+id/button3"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true"
        android:onClick="consulta" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="MODIFICACION"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="modificar" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROPIETARIOS"
            android:id="@+id/rb_propietarios"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COCHES"
            android:id="@+id/rb_coches"
            android:checked="false" />
    </RadioGroup>

</RelativeLayout>
